 <main class="container">
        <section class="mb-4">
            <h2 class="mb-3">All Vendors</h2>
            <div class="table-responsive shadow-sm">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Vendor Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Permission</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (vendors.length > 0) { %>
                            <% vendors.forEach((vendor, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= vendor.name %></td>
                                    <td><%= vendor.email %></td>
                                    <td><%= vendor.phone || 'N/A' %></td>
                                    <td><%= vendor.address || 'N/A' %></td>
                                    <td><span class="badge bg-primary"><%= vendor.permissions %></span></td>
                                    <td>
                                        <a href="/admin/vendors/edit/<%= vendor._id %>" class="btn btn-sm btn-warning">Edit</a>
                                        <form action="/admin/vendors/delete/<%= vendor._id %>" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this vendor?')">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center">No vendors found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
        </main>