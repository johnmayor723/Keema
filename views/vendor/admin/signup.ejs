<div style="height: 50px;"></div>
<div style="margin-top: 150px;" class="container mt-5">
    <h1 class="mb-4">Vendor Admin Sign Up</h1>
    <form action="/vendor/admin/register" method="POST" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" id="name" name="name" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-success w-100">Sign Up</button>
    </form>
    <div class="mt-3 text-center">
        <a href="/vendor/signin">Already have an account? Sign in here</a>
    </div>
</div>
