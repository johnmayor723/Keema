<div style="height: 50px;"></div>
<div style="margin-top: 150px;" class="container mt-5">
    <h1 class="mb-4">Vendor Sign In</h1>
    <form action="/vendor/admin/signin" method="POST" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign In</button>
    </form>
    <div class="mt-3 text-center">
        <a href="/vendor/register">Don't have an account? Register here</a>
    </div>
</div>
