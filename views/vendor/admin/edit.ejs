<!-- views/admin/editVendor.ejs -->
<div class="container mt-5">
    <h1 class="mb-4">Edit Vendor</h1>

    <form action="/admin/vendors/<%= vendor._id %>?_method=PUT" method="POST" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label for="name" class="form-label">Vendor Name:</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= vendor.name %>" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-control" value="<%= vendor.email %>" required>
        </div>

        <div class="mb-3">
            <label for="permissions" class="form-label">Permissions:</label>
            <select id="permissions" name="permissions" class="form-select" required>
                <option value="pending" <%= vendor.permissions === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="vendor" <%= vendor.permissions === 'vendor' ? 'selected' : '' %>>Vendor</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <a href="/admin/vendors" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Update Vendor</button>
        </div>
    </form>
</div>
